<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map_notification"
        android:name="com.google.android.gms.maps.MapFragment"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFontGray"
        android:alpha="0.7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorMain"
        android:id="@+id/relativeLayout_push_top">
        <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/button_pushnotification_back"
            android:src="@drawable/back"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:padding="@dimen/padding_10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontsize_20dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout_push_top"
        android:id="@+id/listView_notification"
        android:background="@android:color/transparent">

    </ListView>


</RelativeLayout>