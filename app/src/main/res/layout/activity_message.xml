<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorMain"
        android:id="@+id/layout_message_top">
        <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/button_message_close"
            android:src="@drawable/close"
            android:background="@android:color/transparent"
            android:padding="@dimen/padding_10dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontsize_20dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/button_message_menu"
            android:src="@drawable/menu"
            android:background="@android:color/transparent"
            android:padding="@dimen/padding_10dp"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_message"
        android:fastScrollEnabled="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/padding_10dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:layout_below="@+id/layout_message_top"
        android:layout_above="@+id/layout_message_bottom"
        android:background="@android:color/transparent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/layout_message_menu"
        android:background="@color/colorWhite"
        android:alpha="0.7"
        android:layout_below="@+id/layout_message_top">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button_message_block"
                android:src="@drawable/block"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                android:paddingBottom="@dimen/fontsize_15dp"
                android:paddingTop="@dimen/padding_5dp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Block"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/fontsize_13dp"
                android:layout_alignBottom="@+id/button_message_block"
                android:textAlignment="center"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button_message_delete"
                android:src="@drawable/remove"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                android:paddingBottom="@dimen/fontsize_15dp"
                android:paddingTop="@dimen/padding_5dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/fontsize_13dp"
                android:layout_alignBottom="@+id/button_message_delete"
                android:textAlignment="center"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDarkGray"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_message_bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/colorMain">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/button_40dp"
            android:maxHeight="100dp"
            android:id="@+id/text_message_edit"
            android:hint="Write a message..."
            android:textSize="@dimen/fontsize_17dp"
            android:textColor="@color/colorBlack"
            android:paddingLeft="@dimen/padding_10dp"
            android:layout_marginTop="@dimen/padding_5dp"
            android:layout_marginBottom="@dimen/padding_5dp"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:background="@color/colorWhite"
            android:layout_toLeftOf="@+id/button_message_send"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_message_send"
            android:src="@drawable/send_white"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:padding="@dimen/padding_10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>