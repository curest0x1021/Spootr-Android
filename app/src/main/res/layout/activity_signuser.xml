<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layout_signuser">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">
                <ImageView
                    android:layout_width="@dimen/image_size_100dp"
                    android:layout_height="@dimen/image_size_100dp"
                    android:id="@+id/imageView_signuser"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/spootr"
                    android:layout_marginTop="50dp"
                    android:scaleType="fitCenter" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_40dp"
                    android:inputType="textPersonName"
                    android:id="@+id/text_signuser_fullname"
                    android:layout_below="@+id/imageView_signuser"
                    android:textSize="@dimen/fontsize_17dp"
                    android:textColor="@color/colorFontWhite"
                    android:hint="Full Name (Optional)"
                    android:textColorHint="@color/colorWhite"
                    android:background="@drawable/textfield"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="@dimen/margin_40dp"
                    android:layout_marginRight="@dimen/margin_40dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_40dp"
                    android:inputType="textPersonName"
                    android:id="@+id/text_signuser_name"
                    android:layout_below="@+id/text_signuser_fullname"
                    android:textSize="@dimen/fontsize_17dp"
                    android:textColor="@color/colorFontWhite"
                    android:hint="Username"
                    android:textColorHint="@color/colorWhite"
                    android:background="@drawable/textfield"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:layout_marginLeft="@dimen/margin_40dp"
                    android:layout_marginRight="@dimen/margin_40dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_40dp"
                    android:inputType="textPassword"
                    android:id="@+id/text_signuser_password"
                    android:layout_below="@+id/text_signuser_name"
                    android:textSize="@dimen/fontsize_17dp"
                    android:textColor="@color/colorFontWhite"
                    android:hint="Password"
                    android:textColorHint="@color/colorWhite"
                    android:background="@drawable/textfield"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:layout_marginLeft="@dimen/margin_40dp"
                    android:layout_marginRight="@dimen/margin_40dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_40dp"
                    android:id="@+id/button_signuser_next"
                    android:text="Next"
                    android:textSize="@dimen/fontsize_17dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorFontWhite"
                    android:textAllCaps="false"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button"
                    android:layout_below="@+id/text_signuser_password"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/margin_40dp"
                    android:layout_marginRight="@dimen/margin_40dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/button_signuser_next"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="By signing up, agree to our"
                            android:textColor="@color/colorFontWhite"
                            android:textSize="@dimen/fontsize_13dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:minWidth="30dp"
                            android:id="@+id/button_signuser_terms"
                            android:text="Terms"
                            android:textColor="@color/colorFontWhite"
                            android:textSize="@dimen/fontsize_13dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="3dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="and"
                            android:textColor="@color/colorFontWhite"
                            android:textSize="@dimen/fontsize_13dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:id="@+id/button_signuser_privacy"
                            android:text="Privacy Policy"
                            android:textColor="@color/colorFontWhite"
                            android:textSize="@dimen/fontsize_13dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="3dp"/>
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorTextBackground">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already have an account?"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/fontsize_13dp"
                            android:textColor="@color/colorWhite"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Sign In."
                            android:id="@+id/button_signuser_login"
                            android:textSize="@dimen/fontsize_13dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:gravity="center_vertical|left"
                            android:background="@android:color/transparent"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>