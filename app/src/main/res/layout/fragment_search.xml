<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="@color/colorMain">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_width="@dimen/image_size_22dp"
                android:layout_height="@dimen/image_size_22dp"
                android:src="@drawable/globe_white"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fontsize_17dp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/padding_5dp"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="@dimen/header_height"
            android:layout_height="@dimen/header_height"
            android:id="@+id/button_fragment_search"
            android:src="@drawable/search"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:padding="@dimen/padding_10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_fragment_search"
        android:background="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0dp"/>

</LinearLayout>