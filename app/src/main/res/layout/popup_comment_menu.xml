<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorMenu">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_comment_report"
            android:text="Report this comment"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontsize_17dp"
            android:textAllCaps="false"
            android:paddingLeft="@dimen/image_size_20dp"
            android:paddingRight="@dimen/image_size_20dp"
            android:paddingTop="@dimen/padding_5dp"
            android:paddingBottom="@dimen/padding_5dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorFontGray"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_comment_notshow"
            android:text="I don't want to see this"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontsize_17dp"
            android:textAllCaps="false"
            android:paddingLeft="@dimen/image_size_20dp"
            android:paddingRight="@dimen/image_size_20dp"
            android:paddingTop="@dimen/padding_5dp"
            android:paddingBottom="@dimen/padding_5dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</RelativeLayout>